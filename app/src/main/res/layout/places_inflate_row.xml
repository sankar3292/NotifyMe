<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:id="@+id/places_imageview"
            android:layout_marginLeft="15dp"
            android:layout_height="80dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/places_name"
            android:textColor="@color/red"
            android:layout_toRightOf="@+id/places_imageview"
            android:text="Places Name"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/places_name"
        android:layout_marginTop="60dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginLeft="130dp"
            android:id="@+id/places_type"
            android:text="Places Type"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/places_type"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginLeft="130dp"
            android:id="@+id/place_address"
            android:text="Address"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/navigation"
            android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
            android:id="@+id/places_navigation"
            android:layout_marginRight="100dp"
            android:layout_alignParentBottom="true"
         />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/phone"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/places_call"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>